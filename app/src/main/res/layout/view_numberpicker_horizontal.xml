<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">

    <Button
        android:id="@+id/btnLessNumberPicker"
        android:layout_width="0dp"

        android:layout_marginTop="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:background="@drawable/recta2"
        android:paddingTop="0dp"

        android:text="-" />

    <EditText
        android:id="@+id/edValueNumberPicker"
        android:layout_width="0dp"
        android:layout_height="@dimen/_32dp"
        android:layout_weight="1"
        android:background="@drawable/recta3"
        android:inputType="number"
        android:layout_marginTop="2dp"
        android:text="0"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnMoreNumberPicker"
        android:layout_width="0dp"
        android:layout_height="@dimen/_32dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@drawable/recta4"
        android:paddingTop="0dp"
        android:text="+"
        android:textAlignment="center" />
</LinearLayout>